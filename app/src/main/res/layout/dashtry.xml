<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/lnr_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnr_identity"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/round_rectangle"
        android:orientation="vertical">
        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="wrap_content"
            android:foregroundGravity="center"
            android:layout_height="30dp"
            android:baselineAligned="false"
            android:queryHint="@string/search_apps"
            android:searchIcon="@drawable/ic_search_black_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/himanshu" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Himanshu Dania"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lnr_drag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lnr_search"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/view_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/fb"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/fbround" />

            <ImageView
                android:id="@+id/insta"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/instaround" />

            <ImageView
                android:id="@+id/googleplus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/googleplusround" />

            <ImageView
                android:id="@+id/linkedin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/fb"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/linkedround" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/fb"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/twitterroundlogo" />

            <ImageView
                android:id="@+id/gmail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/fb"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/gmailroundlogo" />
            <ImageView
                android:id="@+id/flipkart"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/linkedin"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/flipkartroundlogo" />

            <ImageView
                android:id="@+id/quora"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/linkedin"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/quoraroundlogo" />




        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_layout"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="3dp">

            <ImageView
                android:id="@+id/search_voice_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_mic_black_24dp" />





        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>